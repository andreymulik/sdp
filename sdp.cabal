name:          sdp
version:       0.3
category:      Data Structures

synopsis:      Simple Data Processing
description:   SDP provides generalized interface for simple data operations.

author:        Andrey Mulik
maintainer:    work.a.mulik@gmail.com
bug-reports:   https://github.com/andreymulik/sdp/issues

copyright:     2019-2022 Andrey Mulik
license-file:  LICENSE
license:       BSD3

build-type:    Simple
cabal-version: >=1.10

tested-with:
  -- lts-7.0
  GHC == 8.0.1,
  -- lts-7.24
  GHC == 8.0.1,
  -- lts-9.21
  GHC == 8.0.2,
  -- lts-11.22
  GHC == 8.2.2,
  -- lts-12.26
  GHC == 8.4.4,
  -- lts-14.27
  GHC == 8.6.5,
  -- lts-16.31
  GHC == 8.8.4,
  -- lts-18.24
  GHC == 8.10.7,
  -- lts-19.33
  GHC == 9.0.2,
  -- lts-20.26
  GHC == 9.2.8,
  -- lts-21.9
  GHC == 9.4.6,
  -- nightly-2023-09-23
  GHC == 9.6.2

source-repository head
  type: git
  location: https://github.com/andreymulik/sdp

